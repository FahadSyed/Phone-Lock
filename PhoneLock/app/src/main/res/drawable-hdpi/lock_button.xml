<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f26969" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="3dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="3dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f26969"
                android:endColor="#f05656"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="3dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="3dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>